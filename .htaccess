<IfModule mod_rewrite.c>
    Options +FollowSymLinks
    RewriteEngine On
    Redirect 301 /accompagnement /formation

    # Force https://www.slapia.com for all domains (.fr, .com, non-www)
    # Exclude localhost for development
    RewriteCond %{HTTP_HOST} !^www\.slapia\.com$ [NC]
    RewriteCond %{HTTP_HOST} !^localhost$ [NC]
    RewriteCond %{HTTP_HOST} !^127\.0\.0\.1$ [NC]
    RewriteRule ^(.*)$ https://www.slapia.com/$1 [R=301,L]

    # Prevent potential loops
    RewriteCond %{ENV:REDIRECT_STATUS} ^$

    # Remove .php extension and check in pages/ directory
    # Specific Legal Pages Rewrites
    RewriteRule ^mentions-legales$ pages/mentions-legales.php [L,QSA]
    RewriteRule ^politique-confidentialite$ pages/mentions-legales.php [L,R=301]
    RewriteRule ^cgv$ pages/mentions-legales.php [L,R=301]
    
    # ROI Calculator
    RewriteRule ^Calcule-ROI-IA$ pages/Calcule-ROI-IA.php [L,QSA]

    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{DOCUMENT_ROOT}/pages/$1.php -f
    RewriteRule ^([^/]+)$ pages/$1.php [L,QSA]

    # Fallback for root files (like index.php handling if needed, though index is usually default)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^([^\.]+)$ $1.php [NC,L]

    # Custom Error Pages
    # Custom Error Pages
    ErrorDocument 404 /404.php
</IfModule>

<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"
    # Content Security Policy â€” covers all external sources used by the project
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://unpkg.com https://challenges.cloudflare.com https://*.n8n.cloud; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; img-src 'self' data: https: blob:; font-src 'self' https://cdnjs.cloudflare.com; frame-src https://challenges.cloudflare.com; connect-src 'self' https://api.notion.com https://*.n8n.cloud; object-src 'none'; base-uri 'self';"
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresDefault "access plus 2 days"
</IfModule>

    # Dynamic Sitemap
    RewriteRule ^sitemap\.xml$ sitemap.php [L]

