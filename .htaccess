<IfModule mod_rewrite.c>
    Options +FollowSymLinks
    RewriteEngine On
    Redirect 301 /accompagnement /formation

    # Force https://www.slapia.com for all domains (.fr, .com, non-www)
    # Exclude localhost for development
    RewriteCond %{HTTP_HOST} !^www\.slapia\.com$ [NC]
    RewriteCond %{HTTP_HOST} !^localhost$ [NC]
    RewriteCond %{HTTP_HOST} !^127\.0\.0\.1$ [NC]
    RewriteRule ^(.*)$ https://www.slapia.com/$1 [R=301,L]

    # Prevent potential loops
    RewriteCond %{ENV:REDIRECT_STATUS} ^$

    # Remove .php extension and check in pages/ directory
    # Specific Legal Pages Rewrites
    RewriteRule ^mentions-legales$ pages/mentions-legales.php [L,QSA]
    RewriteRule ^politique-confidentialite$ pages/mentions-legales.php [L,R=301]
    RewriteRule ^cgv$ pages/mentions-legales.php [L,R=301]
    
    # ROI Calculator
    RewriteRule ^Calcule-ROI-IA$ pages/Calcule-ROI-IA.php [L,QSA]

    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{DOCUMENT_ROOT}/pages/$1.php -f
    RewriteRule ^([^/]+)$ pages/$1.php [L,QSA]

    # Fallback for root files (like index.php handling if needed, though index is usually default)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^([^\.]+)$ $1.php [NC,L]

    # Custom Error Pages
    ErrorDocument 404 /pages/404.php
</IfModule>

<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    # Basic CSP - Customize as needed for external scripts (Google Fonts, Analytics, etc.)
    # Header set Content-Security-Policy "default-src 'self' https:; script-src 'self' 'unsafe-inline' https:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; font-src 'self' https: data:;"
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresDefault "access plus 2 days"
</IfModule>

    # Dynamic Sitemap
    RewriteRule ^sitemap\.xml$ sitemap.php [L]

